---
const projects = [
  {
    name: 'âœ¦ zen-wireframe',
    href: 'https://github.com/undefinedcode0/zen-wireframe',
    description:
      'A fork of zen-wireframe (made by napuzu) formally maintained by me, with a focus on expanding theme variety, reviving the original design, and adding new features.',
    linkStyle:
      'text-transparent bg-clip-text bg-gradient-to-tr from-a1 via-a3 to-a2 text-xl after:bg-gradient-to-tr after:from-a1/50 after:via-a3/50 after:to-a2/50',
  },
  {
    name: 'install',
    href: 'https://github.com/undefinedcode0/install',
    description:
      'A install script for Arch Linux that is meant to reduce the hassle of manually installing it, which SUPER WORKS.',
  },
  {
    tag: 'website',
    name: 'This website',
    href: 'https://github.com/undefinedcode0/www-astro',
  },
  {
    name: 'FileSorter',
    href: 'https://github.com/undefinedcode0/FileSorter',
    description:
      'This app will organize files by user choice of media type, file extension, resolution, and more. You can to assign actions to sorted media, like changing label, renaming, adding metadata.',
  },
];

import Layout from '@/layouts/Layout.astro';
import DashedLine from '@/components/common/DashedLine.astro';
import Link from '@/components/common/Link.astro';
---

<Layout title="Projects" description="Projects | undefinedcode">
  <div class="flex gap-7 items-center">
    <h1
      class="italic font-thin font-zodiak text-text text-[clamp(26px,20vmin,90px)]"
      style="letter-spacing: -0.08em; user-select: none;"
      id="title-text">
      Projects
    </h1>
  </div>
  <DashedLine width="100%" />

  {
    projects.map((project, index) => {
      switch (project.tag) {
        case 'website':
          return (
            <>
              <div class:list={['text-lg pt-8']}>
                <p>
                  <Link class="mr-1 text-xl" href={project.href} external>
                    {project.name}
                  </Link>
                  {' built with '}
                  <Link class="mr-1 text-xl" href="https://astro.build/" external>
                    Astro
                  </Link>
                </p>
              </div>
              <DashedLine width="100%" />
            </>
          );
        default:
          return (
            <>
              <div class:list={['text-lg pt-8']}>
                <p>
                  <Link class={project.linkStyle ? project.linkStyle : 'mr-1 text-xl'} href={project.href} external>
                    {project.name}
                  </Link>
                  {project.description}
                </p>
              </div>
              <DashedLine width="100%" />
            </>
          );
      }
    })
  }
</Layout>
